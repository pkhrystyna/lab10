@model List<WebApplication2.Models.Entities.Person>
@{
    ViewBag.Title = "ListOfPeople";
}

<h2>Список учасників опитування</h2>

<table class="table table-striped">
    <thead>
        <tr>
           <th class="text-center">ПІБ</th>
            <th class="text-center">Вік</th>
            <th class="text-center">*</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr class="text-center">
                <td>@person.LastName @person.FirstName @person.Patronymic</td>
                <td>@person.Age</td>
                <td>@Html.ActionLink("Переглянути", "PersonDetails", "Lab2", new { personId = person.Id }, null)</td>
            </tr>
        }
    </tbody>
  
</table>
